<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="@drawable/bg_table_element"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/imgRepositorieAvatar"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="0.10"
        android:background="@drawable/bg_table_element"
        android:contentDescription="@string/lbl_avatar"
        android:paddingLeft="4dp" />

    <TextView
        android:id="@+id/txtRepositorieName"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:layout_weight="0.20"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="3"
        android:textColor="@color/txt_color_table"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/txtRepositorieDescription"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="0.30"
        android:background="@drawable/bg_table_element"
        android:gravity="center"
        android:maxLines="3"
        android:textColor="@color/txt_color_table"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/txtRepositorieLogin"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="0.15"
        android:background="@drawable/bg_table_element"
        android:gravity="center"
        android:textColor="@color/txt_color_table"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/txtRepositorieForks"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="0.12"
        android:background="@drawable/bg_table_element"
        android:gravity="center"
        android:textColor="@color/txt_color_table"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/txtRepositorieWatchers"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="0.13"
        android:background="@drawable/bg_table_element"
        android:gravity="center"
        android:textColor="@color/txt_color_table"
        android:textSize="12sp" />

</LinearLayout>